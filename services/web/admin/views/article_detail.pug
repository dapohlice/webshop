block article_detail

  div#detailModal.modal.fade
    div.modal-dialog.modal-xl
      div.modal-content
        //- Modal Header
        div.modal-header
          h4.modal-title    
            | Edit article   
          button.close(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Abort editing article" 
          ) 
            | &times;
        //- Modal Body
        div.modal-body
          form#articleDetailForm.needs-validation(
            novalidate
            )
            template#article-template
              div.form-row
                div.col-md-6.mb-3
                  label(
                    for="editname"
                    )
                    | Name
                  input.form-control#editname(
                    type="text"
                    placeholder="Enter name for this article"
                    value="{{name}}"
                    required
                  )
                  div.invalid-feedback
                    | Please provide a valid articlename.
                div.col-md-2.mb-3
                  label(
                    for="editproductid"
                    )
                    | Item number
                  input.form-control#editproductid(
                    type="number"
                    placeholder="Enter item number for this article"
                    value="{{productid}}"
                    disabled
                    )
                  div.invalid-feedback
                    | Please provide a valid item number.
                div.col-md-4.mb-3
                  div.row
                    div.from-group.col
                      label(
                        for="editstate"
                        )
                          | Status
                  div.row
                    div.from-group.col
                      input.form-control.btn#editstate(
                        class="{{ state | btncolor }}"
                        type="button"
                        value="{{ state | status }}"
                        disabled
                        )
                    div.from-group.col
                      button.float-right.btn#edit-status(
                        class="{{ state | btninvertcolor }}"
                        data-id="{{productid}}"
                        type="button"
                        )
                          | {{ state | btntogglestatus }}
              div.form-row
                div.col-md-6.mb-3
                  div.form-group
                    label(
                      for="editprice"
                      )
                        | Price     
                    input.form-control#editprice(
                      type="text"
                      placeholder="0.00"
                      value="{{price}}"
                      required
                      )
                    div.invalid-feedback
                      | Please provide a valid price number.
                div.col-md-6.mb-3
                  div.form-group
                    label(
                      for="editcategory"
                      )
                        | Category     
                    select.form-control#editcategory(
                      data-id="{{category}}"
                      required
                      )
                    div.invalid-feedback
                      | Please provide a valid category.
              div.form-row
                div.col-md-12.mb-3
                  div.form-group
                    label(
                      for="editdescription"
                      )
                        | Description
                    textarea.form-control#editdescription(
                      rows="5"
                      placeholder="Get me some description for this article ..."
                      required
                      )
                        | {{description}}
                    div.invalid-feedback
                      | invalid description
              div.form-row     
                div.col
                  hr
                  h4 Properties
              div.form-row     
                div.col-md-4.mb-3
                  div.form-group
                    label(
                      for="editsubid"
                    )
                      | Item number
                    input.form-control#editsubid(
                      type="number"
                      placeholder="Enter sub item number for this property"
                      value="{{#propertys}}{{subid}}{{/propertys}}"
                      disabled
                    )
                    div.invalid-feedback
                      | Please provide a valid sub item number.
                div.col-md-4.mb-3
                  div.form-group
                    label(
                      for="editproperty"
                    )
                      | characteristics
                    input.form-control#editproperty(
                      type="text"
                      placeholder="Insert properties and separated several with ','"
                      value="{{#propertys}}{{property}}{{/propertys}}"
                      disabled
                    )
                    div.invalid-feedback
                      | Please provide valid properties.
                div.col-md-4.mb-3
                  div.form-group
                    label(
                      for="editamount"
                    )
                      | Property amount
                    input.form-control#editamount(
                      type="number"
                      placeholder="Insert amount for this property"
                      value="{{#propertys}}{{amount}}{{/propertys}}"
                      disabled
                    )
                    div.invalid-feedback
                      | Please provide a valid amount number.
              hr
                //- div.modal-footer-temp
              button#edit-article.btn.btn-success.float-right(
                data-id="{{productid}}"
                type="submit"
                )
                  i.fa.fa-check
                    | Save
