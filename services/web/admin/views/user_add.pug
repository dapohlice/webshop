block user_add

  div#addModal.modal.fade
    div.modal-dialog.modal-lg
      div.modal-content
        //- Modal Header
        div.modal-header
          h4.modal-title
            | Add a new employee              
          button.close(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Abort add new user" 
          ) 
            | &times;
        //- Modal Body
        div.modal-body
          form.needs-validation#addnewuserform(
            novalidate
            )
            div.form-row
              div.col-md-6.mb-3
                label(
                  for="firstname"
                )
                  | First name
                input.form-control#firstname(
                  type="text"
                  placeholder="Enter first name"
                  required
                )
                div.invalid-feedback
                  | Please enter your firstname.
              div.col-md-6.mb-3
                label(
                  for="lastname"
                )
                  | Last name
                input.form-control#lastname(
                  type="text"
                  placeholder="Enter last name"
                  required
                )
                div.invalid-feedback
                  | Please enter your lastname.
            div.form-row
              label(
                for="email"
              )
                | Email
              input.form-control#email(
                type="email"
                placeholder="Enter email"
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
                required
              )
              div.invalid-feedback
                | Please provide a valid mail.
            div.form-group
              div.form-check
                input.form-check-input#invalidCheck(
                  type="checkbox"
                  value=""
                  required
                  )
                label.form-check-label(
                  for="invalidCheck"
                  )
                  | Agree to terms and conditions
                div.invalid-feedback
                  | You must agree before submitting.
            button#newuserbtn.btn.btn-success.float-right(
              type="submit"
            )
              i.fa.fa-check
                | Register
