block group_add

  div#addModal.modal.fade
    div.modal-dialog.modal-xl
      div.modal-content
        //- Modal Header
        div.modal-header
          h4.modal-title
            | Add a new group              
          button.close(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Abort add new group" 
          ) 
            | &times;
        //- Modal Body
        div.modal-body
          form#addGroupForm.needs-validation(
            method="get"
            novalidate
            )
            div.form-row
              div.col-md-12.mb-3
                label(
                  for="groupname"
                )
                  | User name
                input.form-control#groupname(
                  type="groupname"
                  placeholder="Enter new group name"
                  required
                )
                div.invalid-feedback
                  | Please provide a valid groupname.
            button#newgroupbtn.btn.btn-success.float-right(
              type="submit"
            )
              i.fa.fa-check
                | Create
