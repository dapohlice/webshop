block user_details

  div#groupDetailModal.modal.fade
    div.modal-dialog.modal-lg
      div.modal-content
        //- Modal Header
        div.modal-header
          h4#modalDetailTitel.modal-title        
          button.close(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Close user details" 
          ) 
            | &times;
        //- Modal Body
        div.modal-body
          div.container
            div.row
              
                    
        //- Modal Footer
        div.modal-footer
          button#closeDetailButton.btn.btn-danger(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Close user details" 
          )
            i.fa.fa-close
              | Abort
