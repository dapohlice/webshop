block user_details

  div#detailModal.modal.fade
    div.modal-dialog.modal-lg
      div.modal-content
        //- Modal Header
        div.modal-header
          h4#modalDetailTitel.modal-title        
          button.close(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Close user details"
            onclick="setDetailsFalse()"
          ) 
            | &times;
        //- Modal Body
        div.modal-body        
                
          div#jsonDetailObjekt
          
        //- Modal Footer
        div.modal-footer
          button#resetPwdUserBtn.btn.btn-danger(
            type="button"
            onclick="patchPwdUser()"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Reset password for current user" 
          )
            i.fa.fa-trash
              | Reset password
          button#patchStatusUserBtn.btn.btn-warning(
            type="button"
            onclick="patchUserStatus()"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Set new status for current user" 
          )
            i.fa.fa-wrench
              | Set status
          button#editDetailUserBtn.btn.btn-success(
            type="button"
            onclick="validateForm()"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Save new changes and close user details" 
          )
            i.fa.fa-check
              | Save changes
