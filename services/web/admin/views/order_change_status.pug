block order_change_status

  div#changeOrderStatusModal.modal.fade
    div.modal-dialog.modal-md
      div.modal-content
        //- Modal Header
        div.modal-header
          h4.modal-title          
          button.close(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Close status asker window" 
          ) 
            | &times;
        //- Modal Body
        div.modal-body
          div.container
            div.row
              div.col.col-lg-6
                h5 Next status:
                button#changeStatusButton.btn.btn-secondary(
                  type="button"
                  action="#"
                  data-tooltip="tooltip"
                  data-placement="bottom"
                  title="next status" 
                )
                  | Payed
              div.col.col-lg-6
                
                
        //- Modal Footer
        div.modal-footer
          button#closeStatusButton.btn.btn-danger(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Abort to change status" 
          )
            | Abort
          button#acceptStatusButton.btn.btn-success(
            type="button"
            href="#"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Change order status now" 
          )
            | Accept
