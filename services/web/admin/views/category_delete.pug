block category_delete

  div#deleteModal.modal.fade
    div.modal-dialog.modal-md
      div.modal-content
        //- Modal Header
        div.modal-header
          h4.modal-title
            | Do you really want delete this category?
          button.close(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Abort delete category" 
          ) 
            | &times;
          
        //- Modal Footer
        div.modal-footer
          button.btn.btn-danger(
            type="button"
            data-dismiss="modal"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Abort delete category" 
          ) 
            i.fa.fa-close
              |  Abort
          button#remove-category.btn.btn-success(
            type="button"
            data-tooltip="tooltip" 
            data-placement="bottom" 
            title="Delete category" 
          )
            i.fa.fa-check
              | Delete
