extends layout

block body  
  body(onload="setStatus()")

block nav
  - var cur = "order"

block content
  div.col.pt-2
    h2.text-center #{title}
    div.nav.navbar.search-bar
      div.dropdown
        button.btn.btn-secondary.dropdown-toggle(
          type="button" 
          data-tooltip="tooltip" 
          data-placement="bottom" 
          title="Set status" 
          data-toggle="dropdown"
          onload="changeDropDownTitle()"
          )
          | Status
          span.caret
        ul.dropdown-menu
          li
            a.dropdown-item(
                href=`?order=open`  
            )
              | Open
          li
            a.dropdown-item(
                href=`?order=paid`              
            )
              | Paid
          li
            a.dropdown-item(
                href=`?order=packed`              
            )
              | Packed
          li
            a.dropdown-item(
                href=`?order=returns`
            )
              | Returns
        div.search-container
          form
            input(type="text" placeholder="Search.." name="search")
            button(type="submit" onclick=("orderSearch()"))
              i.fa.fa-search

    include changeorder

    div#jsonobjekt
      
block scripts
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js')
  script(type='text/javascript' src='js/services.js' defer='defer')
  script(type='text/javascript' src='js/form_data.js' defer='defer')
  script(type='text/javascript' src='js/request.js' defer='defer')
  script(type='text/javascript' src='js/db_sidebar.js')
  script(type='text/javascript' src='js/tooltip.js')
  script(type='text/javascript' src='js/helper.js')

    
            
      
